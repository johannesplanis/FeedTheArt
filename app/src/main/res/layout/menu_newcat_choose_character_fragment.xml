<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overall_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWEET CAT"
        android:id="@+id/choose_character_fragment_header"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/overall_font"
        android:typeface="serif"
        android:layout_above="@+id/choose_character_fragment_image"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_character_fragment_image"
        android:src="@drawable/kitty_placeholder"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:baselineAlignBottom="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>