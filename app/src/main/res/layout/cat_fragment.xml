<?xml version="1.0" encoding="utf-8"?>

<!--
color palette:
http://design-seeds.com/home/entry/pinwheel-color
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/overall_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center_vertical">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/cat_menu_button"
            android:enabled="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cat_feedme_textz"
            android:visibility="invisible"
            android:textSize="32dp"
            android:text="buttock"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewButt"
            android:id="@+id/button2"
            android:visibility="invisible"
            android:background="#ededda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cat_feedme_text"
            android:src="@drawable/battery_low"
            android:layout_gravity="right"
            android:padding="5dp"
            android:text="55!"
            android:textColor="@color/overall_font"
            android:textSize="32dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/cat_name_field"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:focusable="false"
            android:enabled="true"
            android:textColor="#000000"
            android:typeface="serif"
            android:src="@drawable/cat_dialogbox"
            android:layout_weight="2"
            android:layout_marginBottom="-30dp"
            android:background="@drawable/cat_dialogbox"
            android:text="I&apos;m starving, feed me!"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/cat_container"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/cat_placeholder_image_view"
                android:layout_gravity="center"
                android:src="@drawable/cat_basic"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="5dp" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAP"
            android:id="@+id/cat_map_button"
            android:background="#2cd1a0"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/overall_font"
            android:typeface="serif"
            android:textSize="18dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ART"
            android:id="@+id/cat_art_button"
            android:background="#d44846"
            android:textColor="#ededda"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:typeface="serif"
            android:textSize="18dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXTRA"
            android:id="@+id/cat_extra_button"
            android:background="#614687"
            android:textColor="#ffd333"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:typeface="serif"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>