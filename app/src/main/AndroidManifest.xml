        <activity
            android:name="com.planis.johannes.feedtheart.intro.IntroActivity"
            android:label="@string/title_activity_intro"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>-->
        <activity
            android:name="intro.IntroActivity"
            android:label="@string/title_activity_intro"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
